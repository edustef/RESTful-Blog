<% include partials/header %>

<div class="ui main text container segment">
  <h1 class="ui huge header">New Blog</h1>
  <form class="ui form" action="/blogs" method="POST">
    <div class="field">
      <label for="">Title</label>
      <input required type="text" name="blog[title]" placeholder="Title">
    </div>
    <div class="field">
      <label for="">Image</label>
      <input type="text" name="blog[image]" placeholder="Image">
    </div>
    <div class="field">
      <label for="">Blog Content</label>
      <textarea required name="blog[body]" cols="30" rows="10"></textarea>
    </div>
    <input class="ui green basic button " type="submit">
  </form>
</div>

<% include partials/footer %>